<%= form_with url: path, method: method, local: true do |f| %>
  <ul><%= f.label :name, "Name" %>
  <%= f.text_field :name, value: name %></ul>
  
  <ul><%= f.label :release_year, "Release Year" %> 
  <%= f.text_field :release_year, value: release_year %></ul>

  <ul><%= f.label :best_picture_oscar, "Best Picture Oscar?" %>
    <%= f.radio_button :best_picture_oscar, value=false %> Check if False
    <%= f.radio_button :best_picture_oscar, value=true %> Check if True </ul>

  <%= f.submit button_text %>
<% end %>